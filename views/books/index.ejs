<% layout("/layouts/boilerplate") %>
<h3>
    all books
</h3>
    <!-- <form method="GET" action="/books/new">
        <button>Create New Book</button>
    </form> -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<% for (let book of allBooks) { %>
<a href="/books/<%= book._id %>" class="book-link">
<div class="card col book-card" >
    <img src="<%= book.image %>" class="card-img-top" alt="book-image" style="height: 20rem">
    <!-- <div class="card-img-overlay"> -->
    <div class="card-body">
        <p class="card-text">
            <b><%= book.title %> <br></b>
            &#8377 <%= book.price.toLocaleString("en-IN") %> / book
        </p>
    </div>
    <!-- </div> -->
</div>
</a>
<% } %>
</div>

